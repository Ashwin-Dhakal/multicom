#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime/

perl SOFTWARE_PATH/src/prosys/script/pir2ts_energy.pl SOFTWARE_PATH/tools/modeller9v7/ SOFTWARE_PATH/examples/ SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime/ SOFTWARE_PATH/examples/T0993s2.pir 5  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime/T0993s2.pdb" ]];then 
	printf "!!!!! Failed to run modeller9v7, check the installation <SOFTWARE_PATH/tools/modeller9v7/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0993s2-modeller9.7-$dtime/T0993s2.pdb\n\n"
fi

