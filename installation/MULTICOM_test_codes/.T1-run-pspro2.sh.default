#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/
cd SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/
#SOFTWARE_PATH/tools/pspro2/bin/predict_ss_sa_cm.sh SOFTWARE_PATH/examples/T0993s2.fasta SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/ &> SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime.log
SOFTWARE_PATH/tools/pspro2/bin/predict_ssa.sh SOFTWARE_PATH/examples/T0993s2.fasta SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime.log>..\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/T0993s2_fasta.sspro" ]];then 
	printf "\n!!!!! Failed to run pspro2, check the installation <SOFTWARE_PATH/tools/pspro2/>."
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2-pspro-$dtime/T0993s2_fasta.sspro\n\n"
fi