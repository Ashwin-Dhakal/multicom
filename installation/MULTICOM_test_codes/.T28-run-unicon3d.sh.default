#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime/

mkdir unicon3d
perl SOFTWARE_PATH/src/meta/unicon3d/script/tm_unicon3d_main.pl SOFTWARE_PATH/src/meta/unicon3d/Unicon3D_option SOFTWARE_PATH/examples/T0993s2.fasta unicon3d  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime/unicon3d/ss1.pdb" ]];then 
	printf "!!!!! Failed to run unicon3d, check the installation <SOFTWARE_PATH/src/meta/hhsearch1.5/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_unicon3d_$dtime/unicon3d/ss1.pdb\n\n"
fi

