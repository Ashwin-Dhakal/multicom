#!/bin/bash

dtime=$(date +%Y-%b-%d)



source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/boost_1_55_0/lib/:SOFTWARE_PATH/tools/OpenBLAS:$LD_LIBRARY_PATH

mkdir -p SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime/
cd SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime/

mkdir deepsf
perl SOFTWARE_PATH/src/meta/deepsf/script/tm_deepsf_main.pl SOFTWARE_PATH/src/meta/deepsf/deepsf_option SOFTWARE_PATH/examples/T0993s2.fasta deepsf  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime/deepsf/deepsf1.pdb" ]];then 
	printf "!!!!! Failed to run deepsf, check the installation <SOFTWARE_PATH/src/meta/hhsearch1.5/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2-deepsf-$dtime/deepsf/deepsf1.pdb\n\n"
fi

