#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime/

mkdir hmmer
perl SOFTWARE_PATH/src/meta/hmmer/script/tm_hmmer_main_v2.pl SOFTWARE_PATH/src/meta/hmmer/hmmer_option SOFTWARE_PATH/examples/T0993s2.fasta hmmer  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime/hmmer/hmmer1.pdb" ]];then 
	printf "!!!!! Failed to run hmmer, check the installation <SOFTWARE_PATH/src/meta/hmmer/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0993s2-hmmer-$dtime/hmmer/hmmer1.pdb\n\n"
fi

